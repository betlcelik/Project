<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#0073d0"
    tools:context=".UserProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="#0073d0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/iv_avatar"
                    android:padding="5dp"
                    android:layout_marginTop="25dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_users"
                    android:layout_marginStart="20dp"
                    />

                <RelativeLayout
                    android:layout_marginTop="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp">

                    <TextView

                        android:id="@+id/tv_firstName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_marginTop="35dp"
                        android:textSize="20dp"/>

                    <TextView
                        android:id="@+id/tv_lastName"
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/tv_firstName"
                        android:textSize="20dp"
                        android:layout_marginTop="35dp"
                        android:textColor="@color/white" />


                    <!-- Add more EditText views here -->

                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="200dp">
                <TextView
                    android:id="@+id/tvDepartment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Department : "
                    android:textColor="@color/black">

                </TextView>

                <TextView
                    android:id="@+id/tv_department"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Department"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/tvDepartment"

                    ></TextView>
                <TextView
                    android:id="@+id/tvGrade"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grade : "
                    android:layout_below="@id/tvDepartment"
                    android:textColor="@color/black">

                </TextView>

                <TextView
                    android:id="@+id/tv_grade"
                    android:layout_marginTop="10dp"
                     android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/tvGrade"
                    android:layout_below="@id/tvDepartment"
                    android:text="Grade"
                    ></TextView>

                <TextView
                    android:id="@+id/tvState"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="State : "
                    android:textColor="@color/black"
                    android:layout_below="@id/tv_grade"
                    />

                <TextView
                    android:id="@+id/tv_state"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:text="Unspecified"
                    android:layout_height="match_parent"
                    android:layout_below="@id/tv_grade"
                    android:layout_toRightOf="@id/tvState"
                    />

                <TextView
                    android:id="@+id/tvDistance" android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Distance : "
                    android:textColor="@color/black"
                    android:layout_below="@id/tv_state"
                    />

                <TextView
                    android:id="@+id/tv_distance"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Unspecified"
                    android:layout_toRightOf="@id/tvDistance"
                    android:layout_below="@id/tv_state"
                    />

                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Time : "
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/tv_distance"


                    ></TextView>

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:text="Unspecified"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/tv_distance"
                    android:layout_toRightOf="@id/tvTime"

                    ></TextView>



                <!-- Add your views here -->

            </RelativeLayout>



        </RelativeLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageView

            android:id="@+id/iv_match"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="15dp"
            android:layout_toRightOf="@id/iv_wp"
            android:layout_above="@id/tv_wp"
            android:src="@drawable/roomy"
            >

        </ImageView>

        <TextView
            android:id="@+id/tv_wp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
           android:layout_centerHorizontal="true"
            android:layout_marginBottom="25dp"
            android:text="Send Message"
            android:textColor="@color/black"/>

        <ImageView

            android:id="@+id/iv_wp"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginBottom="15dp"
            android:layout_above="@id/tv_wp"
            android:src="@drawable/wp"
            android:layout_centerHorizontal="true"
           >

        </ImageView>

        <TextView
            android:id="@+id/tv_macth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="35dp"
            android:layout_marginBottom="25dp"
            android:text="Click to Match"

            android:textColor="@color/black"/>

        <ImageView

            android:id="@+id/iv_email"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginBottom="15dp"
            android:layout_toLeftOf="@id/iv_wp"
            android:layout_marginRight="30dp"
            android:layout_above="@id/tv_sendEmail"
            android:src="@drawable/email"

            >

        </ImageView>

        <TextView
            android:id="@+id/tv_sendEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="25dp"
            android:text="Send Email"
            android:textColor="@color/black"/>

    </RelativeLayout>
</RelativeLayout>




